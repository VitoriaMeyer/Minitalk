
CFLAGS	= -Wall -Werror -Wextra
CC 		= @cc
RM		= @rm -f

SERVER	= server
CLIENT	= client

LIBFT	= ./libft/libft.a

HEADER = minitalk.h

#animation
E		= @echo
S		= @sleep 
PF		= @printf

all :
	$(CC) server.c $(FLAGS) $(LIBFT) -o $(SERVER)
	$(CC) client.c $(FLAGS) $(LIBFT) -o $(CLIENT)

cute : 
#1- frame
		$(PF) "\033c\n"
		$(CP)	
		$(E) "\033[0;35m         I'm compiling - (ɔ ◔ ‿ ◔)ɔ ♡ \n"
		$(BB)
		$(S) 0.5
		$(PF) "\033r"
#2- frame	
		$(PF) "\033c\n"
		$(CP)
		$(E) "\033[0;35m         I'm compiling - (ɔ ◔ ‿ ◔)ɔ ♡♡ \n"
		$(BB)
		$(S) 0.5
		$(PF) "\033r"
#3- frame
		$(PF) "\033c\n"
		$(CP)
		$(E) "\033[32m               Done!!! - (ɔ ◔ ‿ ◔)ɔ ♡♡♡ \n"
		$(BB)
		$(S) 0.5
		$(PF) "\033r"

clean:
		$(PF) "\033c\n"
		$(E) "\033[1;91m      ✘  ᕙ (҂◡̀_◡́)ᕤ  Killing files ruthlessly  ✘   \n"
		$(S) 0.1
		$(RM) $(SERVER) $(CLIENT)
		$(S) 0.5
		$(PF) "\033c\n"

fclean:	clean

re:	fclean all

meow:	
		$(E) "                                                   :++:                                   " 
		$(E) "                                                     :##=.                                "
		$(E) "                                                       =%%#=:                             "
		$(E) "                                                         +%%%%+:                          "
		$(E) "                                                          :#%%%%#-                        "
		$(E) "                                                            *%%%%%%=               .-+*#%* "
		$(E) "                                                             +%%%%%%%=          :+#%%%%%%* "
		$(E) "                                                              -%%%%%%%%=     :+%%%%%%%%%%* "
		$(E) "                                                               :%%%%%%%%#. =%%%%%%%%#%%%%= "
		$(E) ".::..                                                           :%%%%%%%%%%%%%%%%#\033[2;38;5;208m***\033[1;;37m%%%%: "
		$(E) "  .-=#%#*=-:                                                     -%%%%%%%%%%%%%#\033[2;38;5;208m*****\033[1;;37m%%%% "
		$(E) "     +%%%%%%%#*=:                                                 *%%%%%%%%%%\033[1;;38;5;208m**\033[2;38;5;208m*****\033[1;;37m%%%%+ "
		$(E) "     +%%%%%%%%%%%#-                                               =%%%%%%%%\033[1;;38;5;208m******\033[2;38;5;208m**#\033[1;;37m%%%%. "
		$(E) "     -%%%%%%%%%%%#%#-                                            +%%%%%%%#\033[1;;38;5;208m*******\033[2;38;5;208m**\033[1;;37m%%%%=  "
		$(E) "      #%%%%%%%%%#\033[2;36m++\033[1;;39m*%#-                                        .#%%%%%%#\033[1;;38;5;208m*********\033[2;38;5;208m*\033[1;;37m%%%%#   "
		$(E) "      .#%%%%%%%%\033[2;36m*+\033[1;;96m+++\033[1;;39m*%#:              .:                     :%%%%%%%#\033[1;;38;5;208m********\033[2;38;5;208m**\033[1;;37m#%%%%:   "
		$(E) "       .#%%%%%%%\033[2;36m*+\033[1;;96m+++++\033[1;;39m#%*-           =%+          :         :%%%%%%%\033[1;;38;5;208m********\033[2;38;5;208m*\033[1;;37m#%%%%%%#    "
		$(E) "        .*%%%%%%%\033[2;36m#*\033[1;;96m+++++*\033[1;;39m%%#+:    .-*%%#.          +#=.     :%%%%%%#\033[1;38;5;208m******\033[1;;37m##%%%%%%%%%:    "
		$(E) "          :*%%%%%%%\033[2;36m%#\033[1;;96m##%%%\033[1;;39m%%%%#%%%%%%=             =%%%#%%%%%%%%%#\033[1;38;5;208m**##\033[1;;37m#%%%%%%%%%%%%=     "
		$(E) "             -*%%%%%%%%%%%%%%%%%%%%#-                =%%%%%%%%%%%%%%%%%%%%%%%%%%%%%=      "
		$(E) "                :===+*#%%%%%%%%%#=.                   :*%%%%%%%%%%%%%%%%%%%%%%%%%%+       "
		$(E) "                       =%%%%%*-.                        .=*%%%%%%%%%%%%%%#%%%%%%%%*       "
		$(E) "                     =#%%#=:                                :-=+++++==-:  .*%%%%%%*       "
		$(E) "                   :#%%=.                                                   +%%%%%+       "
		$(E) "                  =%#-                                                       *%%%%+       "
		$(E) "                 +#:                       L y ƒ a                            %%%%+       "
